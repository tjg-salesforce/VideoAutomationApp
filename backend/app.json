{
  "name": "video-automation-backend",
  "description": "Backend API for Video Automation Platform",
  "repository": "https://github.com/salesforce/video-automation",
  "logo": "https://node-js-sample.herokuapp.com/node.png",
  "keywords": ["node", "express", "video", "automation", "salesforce"],
  "image": "heroku/nodejs",
  "stack": "heroku-22",
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "NODE_ENV": {
      "description": "Environment (development, staging, production)",
      "value": "production"
    },
    "PORT": {
      "description": "Port for the web server",
      "value": "3001"
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:mini"
    }
  ]
}
